<% layout('/layouts/boilerplate')%>

<style>
   #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
   }
   .filter{
    margin-left: 2.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    text-align: center;
    opacity: 0.7;
   }

   .filter:hover{
    opacity: 1;
    cursor: pointer;
   }
   .filter p{
    font-size: 0.8rem;
   }
   .tax-info{
    display: none;
   }
   .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height:3.5rem;
    padding: 1rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
   }
  
</style>

   
<div >
   <h3>All Campaigns:</h3>
   <% if (allCampaigns.length === 0) { %>
      <h3 class="no-campaign-message">You not created any Campaign!</h3>
  <% } else { %>
<div class="row row-cols-lg-3 row-cols-md-2 row-col-sm-1">
  
   <% for(let campaign of allCampaigns){ %>
    <a href="/MailMetrics/campaigns/analyse/<%=campaign._id%>" class="listing-links mb-3 mt-3" >
      <div class="card border-dark mb-3 h-100"  style="max-width: 18rem; ">
         <div class="card-header table-primary">Title: <%= campaign.emailId.title %></div>
         <div class="card-body text-primary">
            <h5 class="card-title" style="width:100%;"> <textarea class="text-primary" disabled> <%= campaign.emailId.subject %></textarea></h5>
           
         </div>
         <div class="card-footer   border-success">Sender: <%= campaign.emailId.sender %></div>
       </div>
    </a>
      
    <% } %>
</div>
<% } %>
    


    
</div>


