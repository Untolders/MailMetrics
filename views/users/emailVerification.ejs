<% layout('/layouts/boilerplate')%>
<body>
    <div class="row mb-3 mt-3">
        <div class="col-6 offset-3">
      
            <h3>Signup for Wonderlust</h3>
            <form method="POST" action="/signup/emailVerification" novalidate class="needs-validation">
                
                <input type="hidden" name="id" id="id" class="form-control" value="<%= newUser._id %>" required>
 
               
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" name="username" id="username" class="form-control" value=<%= newUser.username %> required disabled>
                  
                  <div class="invalid-feedback">
                    username is required!
                  </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email"  class="form-control" value=<%= newUser.email %> required disabled>
                     <div class="invalid-feedback">
                        Email should be valid.
                    </div>
                </div>
              
                
                

                <div class="mb-3">
                    <label for="otp" class="form-label">OTP</label>
                    <input type="string" name="otp" id="otp" class="form-control" required>
                    <div class="invalid-feedback">
                        OTP is required!
                    </div>
            </div>
                    
              <div>
                <button class=" btn btn-success offset-3 col-6 mb-3">Signup</button>
              </div>
              
                
                
           
         
            </form>
        </div>
    </div>
   
   
</body>
